        "responses": {
          "201": {
            "description": ""
          }
        }
      }
    },
    "/dashboard/services/statistics/transitions": {
      "get": {
        "parameters": [
          {
            "in": "query",
            "name": "territory_id",
            "type": "integer",
            "description": "Id do território"
          },
          {
            "in": "query",
            "name": "year",
            "type": "array",
            "items": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "201": {
            "description": ""
          }
        }
      }
    },
    "/dashboard/services/statistics/coverage": {
